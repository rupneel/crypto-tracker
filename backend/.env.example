# Crypto Tracker Backend - Environment Variables
# Copy this file to .env and update values

# Application
APP_NAME="Crypto Tracker API"
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated list)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Database
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./crypto_tracker.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/crypto_tracker

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300
REDIS_ENABLED=false

# External APIs
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_CALLS_PER_MINUTE=30
